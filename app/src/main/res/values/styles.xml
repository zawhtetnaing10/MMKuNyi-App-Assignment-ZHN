<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="backdrop_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/job_backdrop</item>
        <item name="android:tint">@color/tint_color</item>
    </style>

    <style name="login_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="login_btn_card">
        <item name="android:background">@android:color/white</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="login_btn_action">
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/margin_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="login_divider">
        <item name="android:layout_marginTop">@dimen/margin_divider</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="login_reminders">
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="login_text_input_layout">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="login_password_text_input_layout" parent="login_text_input_layout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/ic_remove_red_eye_gray_24dp</item>
        <item name="passwordToggleTint">@android:color/darker_gray</item>
    </style>

    <style name="request_information_text_input_layout">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="register_text_input_layout">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="register_password_text_input_layout" parent="register_text_input_layout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/ic_remove_red_eye_gray_24dp</item>
        <item name="passwordToggleTint">@android:color/darker_gray</item>
    </style>

    <style name="login_text_input_edit_text">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="login_password_text_input_edit_text" parent="login_text_input_edit_text">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="request_information_text_input_edit_text">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="register_text_input_edit_text">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="register_password_text_input_edit_text" parent="register_text_input_edit_text">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="sign_in_and_submit_button_card">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple_dark</item>
        <item name="cardBackgroundColor">@color/primary</item>
        <item name="cardCornerRadius">@dimen/margin_small</item>
    </style>

    <style name="apply_and_save_button_card" parent="sign_in_and_submit_button_card">
        <item name="android:padding">@dimen/margin_medium</item>
    </style>

    <style name="sign_in_and_submit_button_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_regular_3x</item>
    </style>

    <style name="short_job_description">
        <item name="android:textSize">@dimen/text_regular_3x</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="full_job_description">
        <item name="android:layout_marginTop">@dimen/margin_medium_2</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="number_of_person_applied">
        <item name="android:textColor">@color/primary</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="job_detail_labels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium_3</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="job_details_data" parent="job_detail_labels">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="job_required_skills" parent="job_detail_labels">
        <item name="android:layout_marginTop">@dimen/margin_medium_2</item>
    </style>

    <style name="applicant_skills" parent="job_details_data">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="job_details_headings" parent="job_details_data">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_regular_3x</item>
    </style>

    <style name="AppButton">
        <item name="android:paddingLeft">@dimen/margin_medium_2</item>
        <item name="android:paddingRight">@dimen/margin_medium_2</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AccentButton" parent="AppButton">
        <item name="android:background">@drawable/bg_round_accent</item>
        <item name="android:foreground">@drawable/bg_ripple_white</item>
    </style>


</resources>
